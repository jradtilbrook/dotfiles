##
## Session management
##
# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# lock screen shortcut
bindsym $mod+Shift+Escape exec --no-startup-id ~/.local/bin/i3lock_wrapper.sh -n
# bind for lock / sleep / shutdown / ...
bindsym $mod+Shift+Delete exec --no-startup-id ~/.local/bin/i3exit.sh
# use rofi instead of dmenu
bindsym $mod+space exec --no-startup-id rofi -show-icons -modi 'drun#clipboard:greenclip print#run#window#ssh' -show drun -terminal 'i3-sensible-terminal -r scratch' -ssh-command '{terminal} --hold -e "{ssh-client} {host}"'
# simple password management
bindsym $mod+g exec --no-startup-id bwmenu --auto-lock 3600
# clipboard management
bindsym $mod+Shift+p exec --no-startup-id ~/.local/bin/greenclip.sh



