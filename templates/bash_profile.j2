{{ ansible_managed | comment('plain', prefix='#################################', postfix='#################################') }}
# include alias file
if [ -f ~/.bash_aliases ]
then
  source ~/.bash_aliases
fi

# include bashrc file
if [ -f ~/.bashrc ]
then
  source ~/.bashrc
fi

# check window size after each command and, if necessary, update the values of
# LINES and COLUMNS
# shopt -s checkwinsize

# ignore duplicate history
HISTCONTROL=ignoreboth

# environment variables
{% for item in env_vars %}
{% if ansible_distribution in (item.only_os | default([ansible_distribution])) %}
export {{ item.name }}={{ item.value }}
{% endif %}
{% endfor %}

# virtualenv/virtualenvwrapper bindings
test -e "/usr/local/bin/virtualenvwrapper.sh" && source "/usr/local/bin/virtualenvwrapper.sh"

{% if ansible_distribution == 'MacOSX' %}
# colourful prompt
PS1='\e[38;5;80m\u@\h\[\033[00m\]:\e[38;5;214m\w\e[0m\$ '
{% endif %}
